@model Movie

<div class="text-center">
    <h1 class="display-4">Add movie here</h1>

    <br />

    <div class="container">
        <div class="form-container">
            <form method="post">

                <label asp-for="MovieCategory">Category:</label>
                <input type="text" asp-for="MovieCategory" required />

                <label asp-for="MovieTitle">Movie Title:</label>
                <input type="text" asp-for="MovieTitle" required />

                <label asp-for="MovieYear">Year:</label>
                <input type="number" asp-for="MovieYear" min="1900" max="2025" required />

                <label asp-for="MovieDirector">Director:</label>
                <input type="text" asp-for="MovieDirector" required />

                <!-- For the Rating field, use a dropdown menu (G, PG, PG-13, R).-->
                <label asp-for="MovieRating">Rating:</label>
                <select asp-for="MovieRating" required>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>

                <!-- For the Edited field, we want that to be a yes/no (true/false) option.-->
                <!-- Edited, Lent To and Notes are NOT required-->
                <label asp-for="MovieEdited">Edited:</label>
                <select asp-for="MovieEdited">
                    <option value="">-- Select --</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>

                <!-- Lent to field-->
                <label asp-for="MovieLent">Lent To:</label>
                <input type="text" asp-for="MovieLent" />

                <!-- Notes should be limited to 25 characters. (#notcoveredinthevideos)-->
                <label asp-for="MovieNotes">Notes:</label>
                <input asp-for="MovieNotes" maxlength="25" />

                <!-- Submit Button-->
                <button type="submit">Submit</button>

            </form>
       </div>
    </div>

</div>